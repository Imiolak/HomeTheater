<UserControl x:Class="HomeTheater.GUI.Controls.InputMethodButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             DataContext="{Binding RelativeSource={RelativeSource Self}}"
             mc:Ignorable="d" 
             Background="White" 
             BorderBrush="Black"
             BorderThickness="1"
             MouseLeftButtonUp="Toggle"
             Margin="5"
             Height="100" Width="100">
    <Grid Margin="5">
        <Rectangle Name="StatusIndicator" Fill="Red" Width="15" Height="15" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <TextBlock Text="{Binding Path=Text}" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
    </Grid>
</UserControl>
